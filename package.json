{
  "name": "auto-replay-generator",
  "version": "1.5.0",
  "private": true,
  "author": "Lexogrine",
  "homepage": "./",
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "29.5.0",
    "@types/react": "18.0.35",
    "@types/react-dom": "18.0.11",
    "big-integer": "^1.6.48",
    "bootstrap": "^4.5.3",
    "get-port": "^5.1.1",
    "internal-ip": "^6.2.0",
    "node-fetch": "^2.6.1",
    "node-vmix": "^1.5.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "reactstrap": "^8.8.1",
    "simple-websockets": "^1.1.0",
    "simple-websockets-server": "^1.1.0",
    "telnet-stream": "^1.1.0",
    "typescript": "^4.9.4",
    "web-vitals": "^0.2.4",
    "ws": "^8.2.0"
  },
  "build": {
    "appId": "com.lexogrine.autoreplaygenerator",
    "productName": "Lexogrine Auto Replay Generator",
    "win": {
      "icon": "./dist/build/favicon.ico",
      "target": "NSIS"
    },
    "directories": {
      "output": "app",
      "buildResources": "assets"
    },
    "files": [
      "dist/**/*",
      "package.json",
      {
        "from": "dist",
        "to": "build",
        "filter": "**/*"
      },
      "!**/*.asar",
      "!**/app/**/*",
      "!**/app/*",
      "!**/win-unpacked/*",
      "!**/.git/**/*",
      "!**/.git/*"
    ],
    "publish": [
      {
        "provider": "github",
        "owner": "lexogrine",
        "repo": "auto-replay-generator"
      }
    ]
  },
  "main": "dist/electron.js",
  "scripts": {
    "transpile": "tsc electron.ts preload.ts --outDir dist --esModuleInterop true",
    "start": "react-scripts start",
    "build": "npm run transpile && react-scripts build && rm -rf dist/build &&  mv build dist",
    "devElectron": "cross-env DEV=true electron ./",
    "electron": "npm run transpile && npm run devElectron",
    "test": "react-scripts test",
    "dev": "concurrently \"cross-env BROWSER=none PORT=3023 npm start\" \"npm run electron\"",
    "dist": "electron-builder --publish never",
    "publish": "electron-builder --publish always",
    "lint": "eslint . --ext .ts,.tsx",
    "compile": "npm run build && npm run dist",
    "compileAndPublish": "npm run build && npm run publish",
    "eject": "react-scripts eject",
    "prettier-format": "prettier --config .prettierrc --write **/*.{ts,tsx}",
    "prepare": "husky install",
    "pre-commit": "pretty-quick --pattern \"**\\*.{ts,tsx}\" --staged && eslint --ext .{ts,tsx}"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.10",
    "@types/node": "18.15.11",
    "@types/node-fetch": "^2.5.7",
    "@types/socket.io-client": "^1.4.34",
    "@types/ws": "^7.4.7",
    "@typescript-eslint/eslint-plugin": "^4.12.0",
    "@typescript-eslint/parser": "^4.12.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "electron": "^22.3.0",
    "electron-builder": "^23.6.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.26.1",
    "husky": "^8.0.3",
    "ip": "^1.1.5",
    "node-key-sender": "^1.0.11",
    "prettier": "^2.4.1",
    "pretty-quick": "^3.1.3",
    "wait-on": "^5.2.1"
  }
}
